@model IEnumerable<CarsTestTask.Models.Brand>
@{
	ViewData["Title"] = "Бренды";
}
<h2>Список брендов</h2>
<p><a asp-action="Create"><input type="submit" value="Добавить" /></a></p>
<table class="table">
	<tr><th>Название</th><th>Актульность</th><th></th><th></th></tr>
	@foreach (var item in Model)
	{
		<tr style="color:@(item.Active? "black" : "#dddddd");">

			<td>@item.Name</td>
			<td>@(item.Active?"Да":"Нет")</td>
			<td>
				<a asp-action="Edit" asp-controller="Brand" asp-route-id="@item.Id">
					<input type="submit" value="Редактировать" />
				</a>
			</td>

			<td>
				<form asp-controller="Brand" asp-action="Delete" method="post" asp-route-id="@item.Id">
					<input type="submit" value="Удалить" />
				</form>
			</td>
		</tr>
	}
</table>